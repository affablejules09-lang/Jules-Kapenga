<script>
function startApp() {
    document.getElementById('pageAccueil').style.display = 'none';
    document.getElementById('calendrierContainer').style.display = 'block';
}

function toggleCalendrier() {
    const container = document.getElementById("cycleContainer");
    const conseilDiv = document.getElementById("conseilJour");
    const nextPeriod = document.getElementById("nextPeriod");
    const cycle = parseInt(document.getElementById("cycleInput").value);
    const startDate = document.getElementById("startDate").value;

    if (!startDate) { alert("Veuillez entrer la date des derniÃ¨res rÃ¨gles !"); return; }

    if (container.innerHTML !== "") {
        container.innerHTML = "";
        conseilDiv.style.display = "none";
        nextPeriod.innerHTML = "";
        nextPeriod.style.opacity = 0;
        return;
    }

    container.innerHTML = "";
    conseilDiv.innerHTML = "";
    conseilDiv.style.display = "none";

    const ovulation = Math.round(cycle * 0.48);
    const debutFertile = Math.max(1, ovulation - 5);
    let currentDate = new Date(startDate);

    for (let jour = 1; jour <= cycle; jour++) {
        const divJour = document.createElement("div");
        divJour.classList.add("jour");
        divJour.innerText = currentDate.getDate();

        let couleur = "", message = "", prefix = "<span style='color:black'>Conseil :</span>";

        if(jour <= 6) {
            couleur="#7CFC00";
            message="Risque trÃ¨s faible. Ã€ ton choix, de te protÃ©ger ou pas.";
        } else if(jour >= debutFertile && jour <= ovulation) {
            couleur="#FF4C4C";
            message="Attention ! Risque Ã©levÃ© de grossesse. ProtÃ©gez-vous absolument !";
            prefix="<span style='color:blue'>Conseil :</span>";
        } else {
            couleur="#FFA500";
            message="Risque faible mais prÃ©sent. ProtÃ©gez-vous pour plus de sÃ©curitÃ©.";
        }

        divJour.style.backgroundColor = couleur;
        divJour.onclick = () => {
            conseilDiv.style.display = "inline-block";
            conseilDiv.style.backgroundColor = couleur;
            conseilDiv.style.color = "#fff";
            conseilDiv.innerHTML = `${prefix} ${message}`;
        };

        container.appendChild(divJour);
        currentDate.setDate(currentDate.getDate() + 1);
    }

    const nextDate = new Date(startDate);
    nextDate.setDate(nextDate.getDate() + cycle);
    nextPeriod.innerText = "ðŸ©¸ Prochaine rÃ¨gle prÃ©vue : " + nextDate.toLocaleDateString();
    setTimeout(()=>{ nextPeriod.style.opacity = 1; }, 100);
}
</script>

